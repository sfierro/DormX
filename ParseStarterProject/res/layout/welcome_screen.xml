<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to DormX"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:textColor="#024917"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon2"
        android:layout_gravity="center"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A college eXchange platform"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:textSize="25sp"
        android:textColor="#14692E"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to buy and sell things"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:textSize="25sp"
        android:textColor="#14692E"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started..."
            android:textSize="18sp"
            android:paddingRight="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Make an account"
            android:background="@null"
            android:textSize="18sp"
            android:padding="0dp"
            android:id="@+id/makeAccount"/>

    </LinearLayout>


    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="16sp"
        android:layout_marginRight="5dp"/>


    <Button
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="Log in"
        android:textStyle="bold"
        android:background="@null"
        android:textSize="16sp"
        android:padding="0dp"
        android:id="@+id/logIn"
        android:layout_gravity="center"/>

</LinearLayout>